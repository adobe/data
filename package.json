{
  "name": "@adobe/data",
  "version": "0.9.2",
  "description": "Adobe data oriented programming library",
  "type": "module",
  "sideEffects": false,
  "private": false,
  "scripts": {
    "build": "pnpm run copy && pnpm run build-assembly && run-p build:*",
    "build:apidocs": "typedoc",
    "build:code": "tsc -b",
    "build-assembly": "run-p asbuild:release",
    "clean": "shx rm -rf dist build node_modules coverage",
    "clean-cache": "shx rm -rf node_modules/.cache",
    "copy": "shx mkdir -p dist && shx cp README.md LICENSE dist && node scripts/prepare-dist.js",
    "deploy-docs": "pnpm run build && ./scripts/deploy-docs.sh",
    "dev": "pnpm run clean-cache && run-p dev:* dev:serve",
    "dev:apidocs": "nodemon -w README.md -w dist -x typedoc --delay 100",
    "dev:assembly": "nodemon -w assembly -e ts -x pnpm run asbuild:release --delay 100",
    "dev:build": "tsc -b -w --preserveWatchOutput",
    "dev:serve": "vite",
    "dev:test": "vitest",
    "debug": "vitest --inspect-brk --no-file-parallelism --test-timeout 1000000",
    "lint": "run-p lint:*",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:fix": "run-p \"lint:*:fix\"",
    "lint:js:fix": "eslint . --fix",
    "lint:packagejson": "prettier-package-json --write package.json",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "link": "pnpm run build && cd dist && ln -sf ../node_modules node_modules && pnpm link --global",
    "asbuild:debug": "asc assembly/index.ts -o dist/assembly/index.wasm --target debug --enable simd && echo built dist/assembly/index.wasm",
    "asbuild:release": "asc assembly/index.ts -o dist/assembly/index.wasm --target release --enable simd --optimize && echo built dist/assembly/index.wasm",
    "perftest": "node dist/perftest/index.js",
    "pre-commit": "lint-staged",
    "prepublishOnly": "echo \"DO NOT PUBLISH FROM ROOT, use pnpm run publish-public instead.\" && exit 1",
    "publish-public": "pnpm run build && cd dist && pnpm publish --no-git-checks --access public",
    "start": "npx serve .",
    "test": "vitest run"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@lit/context": "^1.1.5",
    "@spectrum-web-components/action-button": "^1.7.0",
    "@spectrum-web-components/action-group": "^1.7.0",
    "@spectrum-web-components/button": "^1.7.0",
    "@spectrum-web-components/card": "^1.7.0",
    "@spectrum-web-components/checkbox": "^1.7.0",
    "@spectrum-web-components/icons-workflow": "^1.7.0",
    "@spectrum-web-components/styles": "^1.7.0",
    "@spectrum-web-components/theme": "^1.7.0",
    "jsonpath": "^1.1.1"
  },
  "peerDependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@assemblyscript/loader": "^0.27.30",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jsonpath": "^0.2.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/browser": "^1.6.0",
    "@webgpu/types": "^0.1.61",
    "assemblyscript": "^0.27.30",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-lit": "^1.11.0",
    "eslint-plugin-lit-a11y": "^4.1.2",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^10.3.10",
    "jsdom": "^24.1.0",
    "lint-staged": "^13.2.2",
    "lit": "^3.3.1",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.46.1",
    "prettier": "^3.2.5",
    "prettier-package-json": "^2.8.0",
    "pretty-quick": "^4.0.0",
    "riteway": "v8.0.0-RC4",
    "shx": "^0.3.4",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "typedoc": "^0.28.9",
    "typescript": "^5.4.0",
    "uuid": "^10.0.0",
    "vite": "^5.1.1",
    "vitest": "^1.6.0",
    "webdriverio": "^9.0.9"
  }
}